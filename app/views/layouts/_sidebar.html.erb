<div class="fixed">
  <p>
    <h1>SIDEBAR</h1>
    <p><%= link_to "All articles", controller: 'articles' %></p>
    <% if current_user %>                
      <p><%= link_to "My Articles", controller: 'articles', :user => current_user%></p>
    <% end %> 
    
    <span class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">By User: <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <% ApplicationController::ALL_USERS.each do |one_user| %>
          <li><%= link_to one_user.name, one_user %></li> 
        <% end %>            
      </ul>          
    </span>
</div>
