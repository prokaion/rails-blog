<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f| %>
      <%= render 'shared/error_messages', model: @category %>

      <%= f.label :cat_name %>
      <%= f.text_field :cat_name, class: 'form-control' %><br>

      <%= f.submit yield(:title), class: "btn btn-primary" %>

    <% end %>
  </div>
</div>